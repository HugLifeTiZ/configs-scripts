# Makes the whisker menu fit in with TiZix.

style "whisker-default" {
    #fg[NORMAL]        = "#dcdcdc"
	#fg[PRELIGHT]      = "#ffffff"
	#fg[ACTIVE]        = "#ffffff"
	#fg[INSENSITIVE]   = "#dcdcdc"

	#bg[NORMAL]        = "#181d1e"
	#bg[PRELIGHT]      = "#226f7a"
	#bg[INSENSITIVE]   = "#181d1e"
	#bg[ACTIVE]        = "#1c5d66"

	#text[NORMAL]      = "#dcdcdc"
	#text[PRELIGHT]    = "#ffffff"
	#text[ACTIVE]      = "#ffffff"
	#text[INSENSITIVE] = "#dcdcdc"

	#base[NORMAL]      = "#363636"
	base[PRELIGHT]    = "#226f7a"
	base[ACTIVE]      = "#226f7a"
	#base[INSENSITIVE] = "#363636"
	
	bg[NORMAL] = "#181d1e"
	bg[PRELIGHT] =  "#226f7a"
	#bg[SELECTED] =  mix (0.21, "#dcdcdc", "#181d1e")
	bg[ACTIVE] = shade (0.9, "#181d1e")
	bg[INSENSITIVE] = "#181d1e"

	fg[NORMAL] = "#dcdcdc"
	fg[PRELIGHT] = shade (1.08, "#dcdcdc")
	fg[SELECTED] = shade (1.08, "#dcdcdc")
	fg[ACTIVE] = "#dcdcdc"
	fg[INSENSITIVE] = mix (0.5, "#181d1e", "#dcdcdc")
	
	base[NORMAL] = mix (0.21, "#dcdcdc", "#181d1e")
	#base[PRELIGHT] = "#226f7a"
	#base[SELECTED] = "#226f7a"
	#base[ACTIVE] = mix (0.21, "#dcdcdc", "#181d1e")
	base[INSENSITIVE] = shade(1.2, "#181d1e")

	text[NORMAL] = "#dcdcdc"
	text[PRELIGHT] = "#f9f9f9"
	text[SELECTED] = "#f9f9f9"
	text[ACTIVE] = "#f9f9f9"
	text[INSENSITIVE] = mix (0.5, "#181d1e", "#dcdcdc")
}

widget "whiskermenu-window*" style "whisker-default"
