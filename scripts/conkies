#!/bin/sh
# Whew, way simpler! :D
pkill conky
for dir1 in "$HOME/.conky" "${XDG_CONFIG_HOME:-$HOME/.config}/conky"; do
    if [ -d "$dir1" ]; then
        for dir2 in "$dir1/"*; do
            if [ -f "$dir2/$(hostname).rc" ]; then
                cd "$dir2" || exit; conky -d -c "$(hostname).rc"
            fi
        done
    fi
done
