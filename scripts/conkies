#!/bin/sh
# Whew, way simpler! :D
pkill conky
hostname=$(hostname)
case "$hostname" in NKU*) hostname=Workbox ;; esac
rm -r "/run/user/$(id -u)/conky"
for dir1 in "$HOME/.conky" "${XDG_CONFIG_HOME:-$HOME/.config}/conky"; do
	if [ -d "$dir1" ]; then
		for dir2 in "$dir1/"*; do
			if [ -f "$dir2/$(hostname).rc" ]; then
				cd "$dir2" || exit; syslog-run conky -c "$(hostname).rc"
			fi
		done
	fi
done
conky-toggle below
